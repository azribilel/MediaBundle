{% block lch_add_choose_media_widget %}
    {% set rand = random() %}
    {% spaceless %}
        <div class="col-xs-12 no-gutter media-selector-container" data-random="{{ rand }}">
            {{ form_label(form) }}
            <div class="col-xs-12 col-md-10">
                <div id="image__{{ rand }}">
                    {#<p>{{ form.vars['helper']|trans }}</p>#}
                    <div>
                        <div id="imageThumb__{{ rand }}" class="media-list-item">
                            {% if value is not empty %}
                                {{ getThumbnail(value) }}
                            {% endif %}
                        </div>
                        <input type="hidden" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value.id }}" {% endif %}/>
                        <p id="displayImageName__{{ rand }}">{% if value %}{{value.name}}{% endif %}</p>
                    </div>
                    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#image-modal__{{ rand }}">
                        <i class="glyphicon glyphicon-picture"></i>
                        {% if value is not empty %}
                            {{ 'lch.media.edit'|trans }}
                        {% else %}
                            {{ 'lch.media.choose'|trans }}
                        {% endif %}

                    </button>
                    {{ block('form_errors') }}
                </div>
                <div
                    class="modal fade media-modal"
                    id="image-modal__{{ rand }}"
                    tabindex="-1"
                    role="dialog"
                    aria-labelledby="myModalLabel"
                    data-route-add="{{ form.vars['add_media_route'] }}"
                    data-route-list="{{ form.vars['list_media_route'] }}"
                    data-media-type="{{ form.vars['media_type'] }}"
                    data-media-params="{{ form.vars['media_parameters']|json_encode }}"
                >
                    <div class="modal-dialog modal-lg" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                <h4 class="modal-title" id="myModalLabel">{{ form.vars['modal_title']|trans }}</h4>
                                {% if(form.vars.attr.helper is defined) %}
                                    <p class="helper"><i class="glyphicon glyphicon-question-sign"></i>{{ form.vars.attr.helper|trans() }}</p>
                                {% endif %}
                            </div>
                            <div class="modal-body">
                                <ul class="nav nav-tabs" role="tablist">
                                    <li role="presentation" class="active"><a href="#add-media__{{ rand }}" aria-controls="add-media" role="tab" data-toggle="tab">{{ "lch.media.add"|trans }}</a></li>
                                    <li role="presentation"><a href="#list-media__{{ rand }}" aria-controls="profile" role="tab" data-toggle="tab">{{ "lch.media.choose"|trans }}</a></li>
                                </ul>
                                <!-- Tab panes -->
                                <div class="tab-content">
                                    <div role="tabpanel" class="tab-pane active clearfix" id="add-media__{{ rand }}">
                                        <div class="col-xs-12 text-center">
                                            <img src="{{ asset('bundles/lchmedia/images/ajax-loader.gif') }}" />
                                        </div>
                                    </div>
                                    <div role="tabpanel" class="tab-pane clearfix" id="list-media__{{ rand }}">
                                        <div class="col-xs-12 text-center">
                                            <img src="{{ asset('bundles/lchmedia/images/ajax-loader.gif') }}" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <hr class="col-xs-10 col-xs-offset-1">
        </div>
    {% endspaceless %}
{% endblock %}